---
import Layout from "../../layouts/Layout.astro";
import messenger from "../../images/top/messenger.png";
import telegram from "../../images/top/telegram.png";
import whatsapp from "../../images/top/whatsapp.png";
---

<Layout title='Dublin Tiling Services | Bathroom Tiling'>
  <main class='bg-[#363333] text-white'>
    <div class='mx-auto max-w-[1400px] p-[16px] md:px-[60px]'>
      <h1 class="text-center text-bold text-2xl md:text-5xl mt-10 md:w-2/3 mx-auto">Contact Dublin Tiling Services for assistance with your tiling project or to schedule a visit</h1>
      <p class="md:w-2/3 mx-auto text-sm md:text-2xl my-5 md:my-10 text-center">You can reach us by filling out the contact form below or by sending us a text or a WhatsApp or a Facebook Messanger message using our mobile number. Rest assured, we aim to respond within 48 hours.</p>
      <div class="flex flex-col md:flex-row gap-10">
     
        <div class="basis-1/2 flex flex-col te ">
          <h2 class="text-bold text-xl md:text-5xl mb-4">Contact details:</h2>
          <div class="mb-4">
            <span class="font-bold">Mobile:</span>
            <a href="tel:07840568808" class="ml-2 text-[#B86300] hover:underline" itemprop="telephone">083 555 55XX</a>
          </div>
          <div>
            <span class="font-bold">Email:</span>
            <a href="mailto:tomas.tiling@gmail.com" class="ml-2 text-[#B86300] hover:underline" itemprop="email">dublin.tiling@gmail.com</a>
          </div>
          <div itemprop="address" itemscope itemtype="https://schema.org/PostalAddress" class="mt-4">
            <span class="font-bold">Address:</span>
            <span class="ml-2" itemprop="streetAddress">123 Main Street</span>,
            <span itemprop="addressLocality">Dublin</span>,
            <span itemprop="addressCountry">Ireland</span>
          </div>
          <div class='flex  gap-x-8 mt-2 md:mt-4 opacity-100'>
            <a href='https://m.me/igor.rak.184'
              ><img
                src={messenger}
                width={60}
                height={60}
                alt='messenger link'
                class='transition-transform duration-300 md:hover:scale-125'
              /></a
            >
            <!-- <a href='tg://resolve?domain=cleanwhalewarsaw'>
              <img
                src={telegram}
                width={60}
                height={60}
                alt='telegram link'
                class='transition-transform duration-300 md:hover:scale-125'
              /></a
            > -->
            <a href='https://api.whatsapp.com/send?phone=48690483990'
              ><img
                src={whatsapp}
                width={60}
                height={60}
                alt='whatsapp link'
                class='transition-transform duration-300 md:hover:scale-125'
              /></a
            >
          </div>

          <div class="flex flex-col mt-10">
            <div class="mb-4">             
              <h2 class="text-bold text-xl md:text-5xl mb-4">Company details:</h2>
            </div>
            <div>
              <span class="font-bold">Company name:</span>
              <span class="ml-2" itemprop="name">DUBLIN TILING LTD</span>
            </div>
            <div itemprop="address" itemscope itemtype="https://schema.org/PostalAddress" class="mt-4">
              <span class="font-bold">Address:</span>
              <span class="ml-2" itemprop="streetAddress">29 Main Road</span>,
              <span itemprop="addressLocality">Dalkeith</span>,
              <span itemprop="postalCode">EH22 5HL</span>
            </div>
            <div class="mt-5">
              <span class="font-bold">Company number:</span>
              <span class="ml-2" itemprop="identifier">SC6245XX</span>
            </div>
          </div>

        </div>
      
   
      <div class=' basis-1/2 w-full p-8  rounded-md shadow-md border'>
        <p class='text-3xl font-bold mb-6  text-white'>Contact Form</p>
        <form action='#' method='POST'>
          <div class='mb-4'>
            <label for='name' class='block text-gray-white text-sm font-bold mb-2'
              >Name:</label
            >
            <input
              type='text'
              id='name'
              name='name'
              placeholder='Your Name'
              class='w-full px-3 py-2 placeholder-gray-300 border border-gray-700 rounded-md focus:outline-none focus:ring focus:ring-[#B86300] focus:border-[#B86300] text-black'
            />
          </div>
          <div class='mb-4'>
            <label
              for='email'
              class='block text-gray-white text-sm font-bold mb-2'>Email:</label
            >
            <input
              type='email'
              id='email'
              name='email'
              placeholder='Your Email'
              class='w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-[#B86300] focus:border-[#B86300] text-black''
            />
          </div>
          <div class='mb-4'>
            <label
              for='phone'
              class='block text-gray-white text-sm font-bold mb-2'>Phone:</label
            >
            <input
              type='text'
              id='phone'
              name='phone'
              placeholder='Your Phone Number'
              class='w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-[#B86300] focus:border-[#B86300] text-black''
            />
          </div>
          <div class='mb-4'>
            <label
              for='message'
              class='block text-gray-white text-sm font-bold mb-2'>Message:</label
            >
            <textarea
              id='message'
              name='message'
              placeholder='Your Message'
              class='w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-[#B86300] focus:border-[#B86300] text-black''
            ></textarea>
          </div>
          <div class='flex justify-end'>
            <button
              type='submit'
              class='bg-[#B86300] hover:underline text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring focus:ring-[#B86300] focus:border-[#B86300]'
              >Send Message</button
            >
          </div>
        </form>
      </div>
    </div>
    </div>
  </main>
</Layout>
