---
interface Props {
  answer: string;
}

const { answer } = Astro.props;
const arrOfString = answer.split("$");
---

<div class='hidden' itemprop='text'>
  <!-- {answer} -->
  {
    arrOfString.map((item, i) => (
      <p class={`${i + 1 !== arrOfString.length ? "pb-5" : ""}`}>{item}</p>
    ))
  }
</div>
