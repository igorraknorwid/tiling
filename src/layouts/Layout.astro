      name='description'
      content='Experience superior tiling services catering to the needs of both domestic and commercial clients in Dublin and the surrounding areas. Contact us now to receive a personalized quotation without compromising on quality.'
    />
    <meta
      content='Dublin Tiling Services | Dublin Tiling'
      property='og:title'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <meta name='robots' content='all' />
    <link rel='canonical' href='https://tiling-site.netlify.app/index.html' />
    <meta property='og:locale' content='en-IE' />
    <meta property='og:type' content='website' />
    <meta
      property='og:url'
      content='https://tiling-site.netlify.app/index.html'
    />
    <meta property='og:site_name' content='tiling services' />
    <meta
      property='og:description'
      content='tiling, bathroom tiling, kitchen tiling | tilers,tiling  | Dublin Tiling Services'
    />
